rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
  	match /users/{userId} {
    	allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
  
    match /fundraisers/{document=**} {
      allow read, create;
      allow write,delete: if request.auth != null;
    }
    
    match /fundraisers/{document}/products/{product} {
    	allow read,create,write,delete: if request.auth != null;
    }
    
    match /settings/passcode {
    	allow read,write,update: if request.resource.data.passcode == resource.data.passcode;
    }
    
    match /settings/publicsettings {
     	allow read,write;
    }
  }
}